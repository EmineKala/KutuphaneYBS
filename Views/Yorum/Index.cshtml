@using KutuphaneBS.Models.Entity
@model List<YORUM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yorumlar</h2>

<table class="table table-bordered">
    <tr>
        <th>Yorum Kodu</th>
        <th>Kitap Kodu</th>
        <th>Üye Kodu</th>
        <th>İçerik</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var yrm in Model)
    {
        <tr>
            <td>@yrm.Kitap_ID</td>
            <td>@yrm.Uye_ID</td>
            <td>@yrm.Yorum_Icerik</td>
            @*<td>@yrm.Yorum_Tarih</td>*@
            <td><a href="/Yorum/YorumSil/@yrm.Yorum_ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Yorum/YorumGuncelle/@yrm.Yorum_ID" class="btn btn-danger">Güncelle</a></td>


        </tr>
    }

</table>
<a href="/Yorum/YorumEkle/" class="btn btn-primary">Yeni Yorum Ekle</a>
